<!-- About Hero Section -->
<section class="py-20 bg-gradient-to-br from-black via-gray-900 to-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h1 class="text-5xl font-bold text-white mb-6">About Me</h1>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">
        Passionate developer with a love for creating innovative solutions and beautiful user experiences
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Profile Image -->
      <div class="text-center lg:text-left">
        <div class="relative inline-block">
          <% if @about.photo.attached? %>
            <img src="<%= url_for(@about.photo) %>" class="w-80 h-80 rounded-full object-cover mx-auto lg:mx-0 border-4 border-yellow-400 shadow-2xl">
          <% else %>
            <div class="w-80 h-80 rounded-full bg-gradient-to-br from-yellow-400 to-yellow-600 mx-auto lg:mx-0 flex items-center justify-center border-4 border-yellow-400 shadow-2xl">
              <i class="fas fa-user text-6xl text-black"></i>
            </div>
          <% end %>
          <div class="absolute -bottom-4 -right-4 w-20 h-20 bg-yellow-400 rounded-full flex items-center justify-center">
            <i class="fas fa-code text-2xl text-black"></i>
          </div>
        </div>
      </div>
      
      <!-- About Content -->
      <div class="space-y-8">
        <div>
          <h2 class="text-3xl font-bold text-yellow-400 mb-4"><%= @about.name %></h2>
          <p class="text-lg text-gray-300 leading-relaxed"><%= @about.bio %></p>
        </div>
        
        <!-- Download Resume -->
        <% if @about.resume.attached? %>
          <div>
            <a href="<%= url_for(@about.resume) %>" class="inline-flex items-center px-6 py-3 bg-yellow-400 text-black font-semibold rounded-lg hover:bg-yellow-300 transition-all duration-300 transform hover:scale-105 shadow-lg">
              <i class="fas fa-download mr-2"></i>
              Download Resume
            </a>
          </div>
        <% end %>
        
        <!-- Quick Stats -->
        <% if @statistics.any? %>
          <div class="grid grid-cols-2 gap-6">
            <% @statistics.each do |stat| %>
              <div class="bg-black/50 border border-yellow-500/20 rounded-lg p-4">
                <div class="text-2xl font-bold text-yellow-400 mb-2"><%= stat.display_value %></div>
                <div class="text-gray-400 text-sm"><%= stat.name %></div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Experience Section -->
<% if @experiences.any? %>
  <section class="py-20 bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">My Journey</h2>
        <p class="text-xl text-gray-400">The path that led me here</p>
      </div>
      
      <div class="space-y-8">
        <% @experiences.each do |experience| %>
          <div class="bg-black/50 border border-yellow-500/20 rounded-xl p-8 hover:border-yellow-400/40 transition-all duration-300">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
              <div>
                <h3 class="text-2xl font-semibold text-white"><%= experience.title %></h3>
                <p class="text-yellow-400"><%= experience.company %></p>
              </div>
              <div class="text-gray-400 text-sm mt-2 md:mt-0"><%= experience.duration %></div>
            </div>
            <p class="text-gray-300"><%= experience.description %></p>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<!-- Education Section -->
<section class="py-20 bg-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-white mb-4">Education</h2>
      <p class="text-xl text-gray-400">My academic background</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <% @educations.each do |education| %>
        <div class="bg-gray-900/50 border border-yellow-500/20 rounded-xl p-8 hover:border-yellow-400/40 transition-all duration-300">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-yellow-400 rounded-full flex items-center justify-center mr-4">
              <i class="fas fa-graduation-cap text-black"></i>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-white"><%= education.degree %></h3>
              <p class="text-yellow-400"><%= education.institution %></p>
            </div>
          </div>
          <p class="text-gray-300 mb-4"><%= education.description %></p>
          <div class="flex justify-between items-center text-sm text-gray-400">
            <span><%= education.duration %></span>
            <% if education.gpa_display %>
              <span><%= education.gpa_display %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Certifications Section -->
<% if @certifications.any? %>
  <section class="py-20 bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Certifications</h2>
        <p class="text-xl text-gray-400">Professional certifications and achievements</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @certifications.each do |certification| %>
          <div class="bg-black/50 border border-yellow-500/20 rounded-xl p-8 hover:border-yellow-400/40 transition-all duration-300">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-yellow-400 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-certificate text-black"></i>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-white"><%= certification.name %></h3>
                <p class="text-yellow-400"><%= certification.issuer %></p>
              </div>
            </div>
            <p class="text-gray-300 mb-4"><%= certification.description %></p>
            <div class="space-y-2 text-sm">
              <div class="text-gray-400">
                <span class="font-semibold">Valid:</span> <%= certification.validity_period %>
              </div>
              <% if certification.credential_id.present? %>
                <div class="text-gray-400">
                  <span class="font-semibold">ID:</span> <%= certification.credential_id %>
                </div>
              <% end %>
              <% if certification.url.present? %>
                <div class="text-gray-400">
                  <a href="<%= certification.url %>" target="_blank" class="text-yellow-400 hover:text-yellow-300">
                    <i class="fas fa-external-link-alt mr-1"></i>Verify Certificate
                  </a>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>