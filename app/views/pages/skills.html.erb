<!-- Skills Hero Section -->
<section class="py-20 bg-gradient-to-br from-black via-gray-900 to-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h1 class="text-5xl font-bold text-white mb-6">My Skills</h1>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">
        A comprehensive overview of my technical expertise and proficiency levels
      </p>
    </div>
  </div>
</section>

<!-- Skills Categories -->
<section class="py-20 bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Frontend Development -->
    <div class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white mb-4">Frontend Development</h2>
        <p class="text-gray-400">Modern web technologies and frameworks</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @skills.select { |skill| ['HTML', 'CSS', 'JavaScript', 'React'].include?(skill.name) }.each do |skill| %>
          <div class="bg-black/50 border border-yellow-500/20 rounded-xl p-6 hover:border-yellow-400/40 transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-white"><%= skill.name %></h3>
              <span class="text-yellow-400 font-bold"><%= skill.proficiency %>%</span>
            </div>
            <div class="w-full bg-gray-700 rounded-full h-3">
              <div class="bg-yellow-400 h-3 rounded-full transition-all duration-1000" style="width: <%= skill.proficiency %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Backend Development -->
    <div class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white mb-4">Backend Development</h2>
        <p class="text-gray-400">Server-side technologies and databases</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @skills.select { |skill| ['Ruby on Rails', 'Node.js', 'PostgreSQL', 'MongoDB'].include?(skill.name) }.each do |skill| %>
          <div class="bg-black/50 border border-yellow-500/20 rounded-xl p-6 hover:border-yellow-400/40 transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-white"><%= skill.name %></h3>
              <span class="text-yellow-400 font-bold"><%= skill.proficiency %>%</span>
            </div>
            <div class="w-full bg-gray-700 rounded-full h-3">
              <div class="bg-yellow-400 h-3 rounded-full transition-all duration-1000" style="width: <%= skill.proficiency %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Tools & Others -->
    <div class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white mb-4">Tools & Others</h2>
        <p class="text-gray-400">Development tools and additional skills</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @skills.select { |skill| !['HTML', 'CSS', 'JavaScript', 'React', 'Ruby on Rails', 'Node.js', 'PostgreSQL', 'MongoDB'].include?(skill.name) }.each do |skill| %>
          <div class="bg-black/50 border border-yellow-500/20 rounded-xl p-6 hover:border-yellow-400/40 transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-white"><%= skill.name %></h3>
              <span class="text-yellow-400 font-bold"><%= skill.proficiency %>%</span>
            </div>
            <div class="w-full bg-gray-700 rounded-full h-3">
              <div class="bg-yellow-400 h-3 rounded-full transition-all duration-1000" style="width: <%= skill.proficiency %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Empty State -->
    <% if @skills.empty? %>
      <div class="text-center py-20">
        <div class="w-24 h-24 bg-yellow-400/10 rounded-full flex items-center justify-center mx-auto mb-6">
          <i class="fas fa-tools text-3xl text-yellow-400"></i>
        </div>
        <h3 class="text-2xl font-semibold text-white mb-4">No Skills Added Yet</h3>
        <p class="text-gray-400 max-w-md mx-auto">
          I'm currently updating my skills list. Check back soon to see my technical expertise!
        </p>
      </div>
    <% end %>
  </div>
</section>

<!-- Skills Overview -->
<section class="py-20 bg-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-white mb-4">Skills Overview</h2>
      <p class="text-xl text-gray-400">My expertise in numbers</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="text-center">
        <div class="w-20 h-20 bg-yellow-400/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-code text-3xl text-yellow-400"></i>
        </div>
        <div class="text-3xl font-bold text-yellow-400 mb-2">
          <%= @skills.count %>
        </div>
        <div class="text-gray-400">Total Skills</div>
      </div>
      
      <div class="text-center">
        <div class="w-20 h-20 bg-yellow-400/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-star text-3xl text-yellow-400"></i>
        </div>
        <div class="text-3xl font-bold text-yellow-400 mb-2">
          <%= @skills.where('proficiency >= ?', 90).count %>
        </div>
        <div class="text-gray-400">Expert Level</div>
      </div>
      
      <div class="text-center">
        <div class="w-20 h-20 bg-yellow-400/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-clock text-3xl text-yellow-400"></i>
        </div>
        <div class="text-3xl font-bold text-yellow-400 mb-2">
          <%= @skills.average(:proficiency).to_i %>%
        </div>
        <div class="text-gray-400">Average Proficiency</div>
      </div>
      
      <div class="text-center">
        <div class="w-20 h-20 bg-yellow-400/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-certificate text-3xl text-yellow-400"></i>
        </div>
        <div class="text-3xl font-bold text-yellow-400 mb-2">
          <%= @skills.where('proficiency >= ?', 70).count %>
        </div>
        <div class="text-gray-400">Advanced Skills</div>
      </div>
    </div>
  </div>
</section>